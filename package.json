{
  "name": "reviewit",
  "version": "0.0.2",
  "description": "A lightweight command-line tool that spins up a local web server to display Git commit diffs in a GitHub-like Files changed view",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "reviewit": "./dist/cli/index.js"
  },
  "main": "./dist/cli/index.js",
  "homepage": "https://github.com/yoshiko-pg/reviewit",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoshiko-pg/reviewit.git"
  },
  "bugs": {
    "url": "https://github.com/yoshiko-pg/reviewit/issues"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:cli HEAD --no-open\" \"sleep 1 && vite --open\"",
    "dev:cli": "tsc --project tsconfig.cli.json && NODE_ENV=development node dist/cli/index.js",
    "build": "tsc && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "start": "pnpm run build && pnpm run build:cli && node dist/cli/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "lefthook install",
    "prepublishOnly": "NODE_ENV=production pnpm run build && pnpm run build:cli"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "open": "^10.0.3",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shiki": "^0.14.7",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lefthook": "^1.5.5",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "git",
    "diff",
    "cli",
    "review",
    "github",
    "code-review",
    "tailwind",
    "react",
    "diff-viewer"
  ],
  "author": "yoshiko-pg",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
